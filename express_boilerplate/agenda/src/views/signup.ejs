<%- include('includes/head') %>

<div class="container text-center col-5">
  <form class="form-signin" method="POST">
    <h1 class="h3 mt-5 mb-3 font-weight-normal">Sign up</h1>
    <input type="hidden" name="_csrf" value=<%- csrfToken %>>
    <input type="email" name="inputEmail" class="form-control col-12 mb-2 p-2 rounded" placeholder="Email address" required>
    <input type="password" name="inputPassword" class="form-control col-12 mb-2 p-2 rounded" placeholder="Create a Password" required>
    <input type="password" name="confirmPassword" class="form-control col-12 mb-2 p-2 rounded" placeholder="Confirm password" required>
    <button class="btn col-12 btn-md btn-primary" type="submit">Send</button>
  </form>
</div>

<%- include('includes/footer') %>